<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:minHeight="70dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/mbtiCode"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="YEMPYZFR"
        android:textColor="@color/darkBlue" />

    <ImageView
        android:id="@+id/mbtiState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/mbtiStateLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/statusA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/statusA"
            android:gravity="center"
            android:text="A"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/statusB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/statusB"
            android:gravity="center"
            android:text="B"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/statusC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/statusC"
            android:gravity="center"
            android:text="C"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/statusD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/statusD"
            android:gravity="center"
            android:text="D"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/testContinue"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:background="@color/blue"
        android:gravity="center"
        android:height="30dp"
        android:text="继续测评"
        android:textColor="@android:color/white"
        android:width="30dp" />

</LinearLayout>